<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Name
      </td>
      <td>
        <%= @phase.name %>
      </td>
    </tr>
    <tr>
      <td>
        Start Date
      </td>
      <td>
        <%= @phase.start_date %>
      </td>
    </tr>
    <tr>
      <td>
        End Date
      </td>
      <td>
        <%= @phase.end_date %>
      </td>
    </tr>
    <tr>
      <td>
        Status
      </td>
      <td>
        <%= @phase.status %>
      </td>
    </tr>
    <tr>
      <td>
        Project
      </td>
      <td>
        <%= link_to @phase.project.name, @phase.project %>
      </td>
    </tr>
    <tr>
      <td>
        Assigned To
      </td>
      <td>
        <%= @phase.assigned_to.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        Visible To Client
      </td>
      <td>
        <span class="badge <%= @phase.visible_to_client ? 'bg-success' : 'bg-warning' %>">
          <%= @phase.visible_to_client ? "Yes" : "No" %>
        </span>
      </td>
    </tr>
    

    <tr>
      <td>
        Details
      </td>
      <td>
        <%= @phase.details %>
      </td>
    </tr>

    <tr>
      <td>
        Percentage Complete
      </td>
      <td>
        <%= number_with_precision @phase.percentage_completed_days, precision: 2 %> %
      </td>
    </tr>

    <tr>
      <td>
        Days
      </td>
      <td>
        Total: <%= @phase.total_days %>, 
        Completed: <%= @phase.completed_days %>
      </td>    
    </tr>

    <tr>
      <td>
        Payment on Completion
      </td>
      <td>
        <span class="badge <%= @phase.payment_required ? 'bg-success' : 'bg-warning' %>">
          <%= @phase.payment_required ? "Yes" : "No" %>
        </span>
      </td>
    </tr>

    <% if @phase.payment_required %>

      <tr>
        <td>
          Payment Status
        </td>
        <td>
          <%= @phase.payment_status %>
        </td>
      </tr>


      <tr>
        <td>
          Payment Due Percentage
        </td>
        <td>
          <%= @phase.payment_due_percentage %> %
        </td>
      </tr>

      <tr>
        <td>
          Payment Due
        </td>
        <td>
          <%= money_to_currency @phase.payment_due, params %>
        </td>
      </tr>


      <tr>
        <td>
          Payment Received
        </td>
        <td>
          <%= money_to_currency @phase.payment_amount, params %>
        </td>
      </tr>

    <% end %>


    <tr>
      <td>
        Completed
      </td>
      <td>
        <span class="badge <%= @phase.completed ? 'bg-success' : 'bg-warning' %>">
          <%= @phase.completed ? "Yes" : "No" %>
        </span>
      </td>
    </tr>


  </table>


  <div>
    <% if policy(@phase).update? %>
      <%= link_to "Edit" , edit_phase_path(@phase), {class: "btn btn-primary" } %> |
      <%= button_to "Delete" , @phase, method: :delete, class: "btn btn-danger" , form_class: "deleteButton" %> |
    <% end %>
    <%= link_to "Add Note" , new_note_path("note[owner_id]": @phase.id, "note[owner_type]": @phase.class.name) , {class: "btn btn-success" }%> 

  </div>

  <div data-controller="datatable">
    <%= render "/phases/phase_details", phase: @phase %>
  </div>