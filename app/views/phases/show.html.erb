<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        Name
      </td>
      <td>
        <%= @phase.name %>
      </td>
    </tr>
    <tr>
      <td>
        Start Date
      </td>
      <td>
        <%= @phase.start_date %>
      </td>
    </tr>
    <tr>
      <td>
        End Date
      </td>
      <td>
        <%= @phase.end_date %>
      </td>
    </tr>
    <tr>
      <td>
        Status
      </td>
      <td>
        <%= @phase.status %>
      </td>
    </tr>
    <tr>
      <td>
        Project
      </td>
      <td>
        <%= link_to @phase.project.name, @phase.project %>
      </td>
    </tr>
    <tr>
      <td>
        Assigned To
      </td>
      <td>
        <%= @phase.assigned_to.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        Visible To Client
      </td>
      <td>
        <span class="badge <%= @phase.visible_to_client ? 'bg-success' : 'bg-warning' %>">
          <%= @phase.visible_to_client ? "Yes" : "No" %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
        Payment Status
      </td>
      <td>
        <%= @phase.payment_status %>
      </td>
    </tr>

    <tr>
      <td>
        Details
      </td>
      <td>
        <%= @phase.details %>
      </td>
    </tr>

    <tr>
      <td>
        Percentage Complete
      </td>
      <td>
        <%= @phase.percentage_complete %> %
      </td>
    </tr>
    <tr>
      <td>
        Completed
      </td>
      <td>
        <span class="badge <%= @phase.completed ? 'bg-success' : 'bg-warning' %>">
          <%= @phase.completed ? "Yes" : "No" %>
        </span>
      </td>
    </tr>


  </table>


  <div>
    <%= link_to "Edit" , edit_phase_path(@phase), {class: "btn btn-primary" } %> |
    <%= link_to "Add Step" , new_step_path("step[phase_id]": @phase.id, "step[project_id]": @phase.project_id), {class: "btn btn-success" } %> |

    <%= button_to "Delete" , @phase, method: :delete, class: "btn btn-danger" , form_class: "deleteButton" %>
  </div>

  <%= render "/phases/phase_details", phase: @phase %>