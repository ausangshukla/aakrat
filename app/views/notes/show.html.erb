<%= render "/layouts/alerts" %>

  <table class="table table-bordered dataTable">

    <tr>
      <td>
        User
      </td>
      <td>
        <%= @note.user.full_name %>
      </td>
    </tr>
    <tr>
      <td>
        Company
      </td>
      <td>
        <%= @note.company.name %>
      </td>
    </tr>
    <tr>
      <td>
        Owner
      </td>
      <td>
        <%= link_to @note.owner_type, @note.owner if @note.owner %>
      </td>
    </tr>
    <tr>
      <td>
        Details
      </td>
      <td>
        <%= @note.details %>
      </td>
    </tr>

    <tr>
      <td>
        Attachments
      </td>
      <td>
        <%= render "/layouts/attachments", attachments: @note.attachments %>
      </td>
    </tr>


  </table>


  <div>
    <% if policy(@note).update? %>
      <%= link_to "Edit" , edit_note_path(@note), {class: "btn btn-primary" } %> |
      <%= button_to "Delete" , @note, method: :delete, class: "btn btn-danger" , form_class: "deleteButton" %>
    <% end %>
  </div>

  <%= render "/layouts/display_attachments", attachments: @note.attachments %>
