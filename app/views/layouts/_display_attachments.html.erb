<div class="row associated_entity">
    <% attachments.each do |file| %>
      <% if file.image? %>
      <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
          <div class="card-body site_visit_image">
            <%= image_tag url_for(file) %>
            <%= button_to "Delete", delete_attachment_projects_path(attachment_id: file.id), class: "btn-sm btn-danger" %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
</div>