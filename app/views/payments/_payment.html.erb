    <%= payment.company.name %>
  </td>
  <td>
    <%= money_to_currency payment.amount, params %>
  </td>
  <td>
    <%= payment.project.client.full_name %>
  </td>
  <td>
    <%= payment.project.name %>
  </td>
  <td>
    <%= payment.phase.name %>
  </td>
  <td>
    <%= payment.discount %>
  </td>
