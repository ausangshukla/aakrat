<% if company.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :company_type %>
    <%= form.select :company_type, Company::TYPES, {}, {class: "form-control"} %>
  </div>
  
  <div class="form-group">
    <%= form.label :industry %>
    <%= form.text_field :category, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :gst_number %>
    <%= form.text_field :gst_number, class: "form-control"  %>
  </div>

  <div class="field" class="form-group" data-controller="directuploads" >
    <%= form.label :logo %>
    <%= form.file_field :logo, class: "form-control", direct_upload: true %>
    <small class="text-muted"> Upload your company logo. </small>
  </div>

  <div class="form-group">
    <%= form.label :entity_names %>
    <%= form.text_field :entity_names, class: "form-control"  %>
    <small class="text-muted"> Comma separated entity names. Leave blank if not applicable </small>
  </div>

  <%= form.text_field :id, class: "form-control", hidden: true   %>
  <div data-controller="companyform"></div>
