<%= form_with(model: client, validate: true) do |form| %>
  <% if client.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control"  %>
  </div>


  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :user_type %>
    <%= form.select :user_type, Client::TYPES, {}, class: "form-control"  %>
  </div>


  <div class="form-group">
    <%= form.label :details %>
    <%= form.rich_text_area :details, class: "form-control trix-content"  %>
  </div>
  
  <%= form.text_field :company_id, hidden: true  %>

  <div class="form-group">
    <%= form.submit "Save", {class: "btn btn-primary"}%>
  </div>
<% end %>
