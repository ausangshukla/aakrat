    <% @phase = @step.phase %>
    <%= turbo_stream.replace("#{dom_id @step}",
        partial: "steps/step", locals: { step: @step }) %>

    <%= turbo_stream.replace('toasts', partial: "layouts/success_toast",
        locals: { message: "Step '#{@step.name}' updated" }) %>

    <% 
        step = @step.dup 
        step.name = nil
    %>

    <%= turbo_stream.replace('step_quick_entry', partial: "steps/quick_entry",
        locals: { step: step }) %>