<tr id="<%= dom_id user %>">
  <td>
    <%= link_to user.first_name, user %>
  </td>

  <td>
    <%= user.last_name %>
  </td>

  <td>
    <%= user.roles.collect(&:name).map(&:humanize ).join(", ") %>
  </td>
  
  <td>
    <%= user.company&.name %>
  </td>

  <td>
    <%= display_boolean user.confirmed? %>
  </td>
  

</tr>
